@model StandartUserSettingsDto // change to local model
@{
    ViewData["Title"] = "Profile Settings";
    ViewData["CurrentId"] = "profile";
}

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
        <label asp-for="PhoneNumber" class="form-label"></label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" placeholder="Please enter your EmailAddress(leave empty if none)" />
        <label asp-for="Email" class="form-label"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" placeholder="Please enter your Name." />
        <label asp-for="Name" class="form-label"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button asp-controller="UserSettings" asp-action="Profile" id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
    <input asp-for="ProfileImage" type="hidden" />
</form>