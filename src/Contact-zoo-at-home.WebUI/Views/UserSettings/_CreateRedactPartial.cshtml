@model CreateRedactPetDto

<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
<div class="form-floating mb-0">
    <input asp-for="Name" class="form-control" />
    <label asp-for="Name" class="form-label">Pet Name</label>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-floating mb-0">
    <input asp-for="ShortDescription" class="form-control" />
    <label asp-for="ShortDescription" class="form-label">Short Description</label>
    <span asp-validation-for="ShortDescription" class="text-danger"></span>
</div>

<div class="form-floating mb-0">
    <input asp-for="Description" class="form-control" />
    <label asp-for="Description" class="form-label">Description</label>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-floating mb-0">
    <input asp-for="Price" class="form-control" />
    <label asp-for="Price" class="form-label">Price</label>
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="form-floating mb-0"> @* change *@
    <input asp-for="Species" class="form-control" />
    <label asp-for="Species" class="form-label">Species</label>
    <span asp-validation-for="Species" class="text-danger"></span>
</div>

<div class="form-floating mb-0">
    Other Pet Options:

    <div id="patrialPetOptions">
        <partial name="_PetOptionsPartial.cshtml" model="Model?.PetOptions ?? new ExtraPetOptionsDTO[0]" />
    </div>

    <button type="button" class="btn btn-secondary" onclick="addNewItem_PetOption()"> Add new option</button>
</div>